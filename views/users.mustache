{{! 1. Вставка шапки (header), яка містить теги <head>, <body> та <header> }}
{{> header}}

    <section class="user-list-section">
        <h2>Список усіх користувачів</h2>
        
        {{! ------------------------------------------------------------- }}
        {{! ЛОГІКА ДЛЯ ВІДОБРАЖЕННЯ СПИСКУ КОРИСТУВАЧІВ }}
        {{! ------------------------------------------------------------- }}

        {{#hasUsers}}
        <div class="user-grid">
            {{! Цикл по масиву 'users', який передається контролером }}
            {{#users}}
                <div class="user-card">
                    <h3>{{username}}</h3>
                    <p>Email: {{email}}</p>
                    <small>Зареєстрований: {{createdAt}}</small>
                </div>
            {{/users}}
        </div>
        {{/hasUsers}}
        
        {{! ------------------------------------------------------------- }}
        {{! СТАН, ЯКЩО КОРИСТУВАЧІВ НЕМАЄ }}
        {{! ------------------------------------------------------------- }}
        {{^hasUsers}}
            <p>Наразі зареєстрованих користувачів немає.</p>
        {{/hasUsers}}
        
    </section>

{{! 2. Вставка підвалу (footer), який закриває <main>, <footer>, <body> та </html> }}
{{> footer}}
