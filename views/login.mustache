{{! 1. Вставка шапки (header), яка містить теги <head>, <body> та <header> }}
{{> header}}

    <section class="auth-box">
        <h2>Вхід до облікового запису</h2>
        
        {{! Блок для відображення повідомлень про помилки від контролера }}
        {{#errorMessage}}
            <p style="color: red; padding: 10px; border: 1px solid red; margin-bottom: 20px;">
                {{errorMessage}}
            </p>
        {{/errorMessage}}
        
        {{! ФОРМА: action має вказувати на POST-маршрут входу /login }}
        <form action="/login" method="POST" class="auth-form">
            
            <div class="form-group">
                <label for="login_email">Електронна пошта</label>
                <input 
                    type="email" 
                    id="login_email" 
                    name="email" 
                    placeholder="Ваш email" 
                    required
                    value="{{email}}" {{! Зберігає email, якщо вхід не вдався }}
                >
            </div>
            
            <div class="form-group">
                <label for="login_password">Пароль</label>
                <input 
                    type="password" 
                    id="login_password" 
                    name="password" 
                    placeholder="Пароль" 
                    required
                >
            </div>
            
            <button type="submit" class="auth-button">Увійти</button>
            
            <p class="auth-link">
                Ще не маєте облікового запису? <a href="/register">Зареєструватися</a>
            </p>
        </form>
    </section>

